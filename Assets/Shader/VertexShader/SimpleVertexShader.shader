Shader "K/SimpleVertexShader"{     Subshader{            Pass{           CGPROGRAM           #pragma vertex vertex           #pragma fragment fra                      float4 vert(float4 v : POSITION) : SV_POSITION {               return UnityObjectToClipPos (v);           }                      fixed4 frag() : SV_Target {               return fixed4(1.0, 0.0, 0.0, 1.0);           }           ENDCG       }   }}